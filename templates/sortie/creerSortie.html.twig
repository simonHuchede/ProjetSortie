{% extends "base.html.twig" %}

{% block contenu %}

    <div class="offset-4 col-8">
        <div class="offset-1 col-4">
        <h1>Nouvelle sortie</h1>
        {{ form_start(formulaireSortie, { 'attr': {'id' : 'formCreerSortie'}}) }}

            {{ form_widget(formulaireSortie)}}

            <label class="form-label" for="ville">Ville: </label>
            <select class="form-control " name="ville" id="ville" onchange="changeVille()">


            </select>
            <div class="row">
                <label class="form-label" for="lieu">Lieu: </label>
                <select class="form-control " name="lieu" id="lieu">


                </select>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#lieuModal">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
            

            <input type="hidden" value="1" id="info" name="info">
        {{ form_end(formulaireSortie)}}
            <button onclick="enregistrer()" class="btn btn-dark mt-3" name="Enregistrer">Enregistrer</button>
            <button onclick="publier()" class="btn btn-dark mt-3" name="Publier">Publier la sortie</button>
            <a href="{{ path('sortie_listSorties') }}" class="btn btn-dark mt-3">Annuler</a>
        </div>
    </div>

    <div class="modal" tabindex="-1" id="lieuModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nouveau Lieu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(formulaireLieu,{'action': path('sortie_ajouter_lieu'), 'attr': {'id':'formLieu'}}) }}
                    {{ form_widget(formulaireLieu) }}

                    {{ form_end(formulaireLieu) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="lieuSubmit()">Enregister</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        function lieuSubmit(){
            document.querySelector('#formLieu').submit();
        }
    </script>
    <script src="{{ asset('js/formButton.js') }}"></script>
    <script src="{{ asset('js/filtreVille.js') }}"></script>
{% endblock %}